<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    tools:context=".liste_oper">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/simed" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="200px"
            app:srcCompat="@drawable/trs" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:gravity="center"
        android:text="Liste des opérateurs"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="790dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:layout_marginBottom="10px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView35"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210px"
            android:text="Prénom"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150px"
            android:text="Nom"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170px"
            android:text="N° Badge"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/liste_oper"
            android:layout_width="612dp"
            android:layout_height="248dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="200px"
            android:background="#8EB6BDBF"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="5px"
        android:orientation="horizontal">

        <Button
            android:id="@+id/annuler_oper"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210px"
            android:layout_marginTop="5px"
            android:layout_marginBottom="5px"
            android:background="@android:color/holo_blue_dark"
            android:text="Annuler"
            android:textSize="24sp" />

        <Button
            android:id="@+id/ok_oper"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310px"
            android:layout_marginTop="5px"
            android:layout_marginBottom="5px"
            android:background="@android:color/holo_blue_dark"
            android:text="ok"
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>