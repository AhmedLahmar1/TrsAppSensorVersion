<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    tools:context=".InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/simed" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginLeft="400px"
            app:srcCompat="@drawable/trs1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tmp_ouv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginBottom="20px"
                android:text="Temps Ouverture :"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginBottom="20px"
                android:text="Temps Requis:"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginBottom="20px"
                android:text="Temps Arrêt:"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginBottom="20px"
                android:text="Temps Fonctionnement:"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginBottom="20px"
                android:text="TextView"
                android:textColor="#0C0C0C"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginBottom="20px"
                android:text="TextView"
                android:textColor="#0C0C0C"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginBottom="20px"
                android:text="TextView"
                android:textColor="#0C0C0C"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginBottom="20px"
                android:text="TextView"
                android:textColor="#0C0C0C"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="112dp"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:text="Disponibilité:"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:text="Perfromance:"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:text="Qualité:"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TRS:"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dtxt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginBottom="20px"
                android:background="#FADBD8 "
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:text="textview" />

            <TextView
                android:id="@+id/ptxt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginBottom="20px"
                android:background="#FADBD8 "
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:text="textview" />

            <TextView
                android:id="@+id/qtxt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="10px"
                android:layout_marginBottom="20px"
                android:background="#FADBD8 "
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:text="textview" />

            <TextView
                android:id="@+id/ttxt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginBottom="20px"
                android:background="#FADBD8 "
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:text="textview" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/Hchart"
            android:layout_width="450dp"
            android:layout_height="233dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/chart_container2"
                android:layout_width="460dp"
                android:layout_height="215dp"
                android:layout_below="@id/tv_title2"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Vchart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/chart_container"
            android:layout_width="380dp"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="45dp"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="934dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="600px"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150px"
            android:layout_marginTop="10px"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center|center_horizontal"
            android:text="Fermer" />
    </LinearLayout>

</LinearLayout>