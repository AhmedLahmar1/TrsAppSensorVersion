<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    tools:context=".Main4Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/simed" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginLeft="400px"
            app:srcCompat="@drawable/trs1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="174dp"
        android:layout_marginLeft="60px"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="176dp"
                android:layout_height="160dp"
                android:background="@drawable/images"
                android:onClick="changePic" />

            <LinearLayout
                android:layout_width="705dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60px"
                    android:layout_marginTop="20px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView43"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:text="Nom:"
                        android:textColor="#044681"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/fNameUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:text="error"
                        android:textColor="#040404"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView44"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70px"
                        android:layout_marginTop="20px"
                        android:text="Prenom:"
                        android:textColor="#044681"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/lNameUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:text="error"
                        android:textColor="#040404"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView45"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70px"
                        android:layout_marginTop="20px"
                        android:text="N° Badge:"
                        android:textColor="#044681"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/badgeUser"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="20px"
                        android:text="error"
                        android:textColor="#040404"
                        android:textSize="18sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/confi"
                    android:layout_width="649dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30px"
                    android:background="@android:color/holo_blue_dark"
                    android:text="Entrer votre N°confirmation"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="20px"
        android:layout_marginBottom="30px"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/iden"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="Entrer votre  N°identifiant" />

        <TextView
            android:id="@+id/txt_iden"
            android:layout_width="252dp"
            android:layout_height="88dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50px"
            android:layout_marginBottom="50px"
            android:ellipsize="end"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/test1"
            android:layout_width="252dp"
            android:layout_height="88dp"
            android:layout_centerInParent="false"
            android:layout_marginLeft="50px"
            android:layout_marginBottom="50px"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="visible"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginTop="40px">

        <TextView
            android:id="@+id/textView46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produit:"
            android:textColor="#044681"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView47"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="Forme:"
            android:textColor="#044681"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView48"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="60px"
            android:text="DCI:"
            android:textColor="#044681"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:textColor="#000000"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginLeft="40px"
        android:layout_marginTop="20px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Présentation:"
            android:textColor="#044681"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10px"
            android:paddingLeft="20px"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90px"
            android:text="Qté à fb:"
            android:textColor="#044681"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt6"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="Cadence théo:"
            android:textColor="#044681"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt5"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="visible"
            tools:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/annuler1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="100px"
            android:background="@android:color/holo_blue_dark"
            android:text="Annuler"
            android:textSize="24sp" />

        <Button
            android:id="@+id/demarrer1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="500px"
            android:background="@android:color/holo_blue_dark"
            android:text="Démarrer"
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>